<Layout seo={seo}>
<div class="div-block-2"></div>

<div class="dirbox">
    <div class="dirbox">
        <h1 class="heading-isssn">{frontmatter.title} ({frontmatter.year})</h1>
        <h1>{frontmatter.author}</h1>
        <div class="dir">
            <a href="/">
                <div id="dirdark" class="dirlink">Home</div>
            </a>

            <img src="/img/icons/cheveron-right.svg" loading="lazy" alt="" class="rightch">

            <a href="/music/">
                <div id="dirdark" class="dirlink_cor">Music</div>
            </a>

            <img src="/img/icons/cheveron-right.svg" loading="lazy" alt="" class="rightch">

            <a href="/i_wanna_die/">
                <div class="dirlink_cor">{frontmatter.title}</div>
            </a>
        </div>
    </div>
</div>
<div class="musicinner">
    <div class="w-row">
        <div class="column-3 w-col w-col-6">
          <a href={`${frontmatter.image}.jpg`}>
            <div class="div-block-4"><img src={`${frontmatter.image}.jpg`} class="image-3"></div>
          </a>
        </div>
        <div class="column-5 w-col w-col-6">
            <h1 class="heading-ina">{frontmatter.title}</h1>
            <div>
                Released: {formatDate(frontmatter.publishedAt)}
                <br> Number of tracks: {frontmatter.numberoftracks}
                <br> Genre: {frontmatter.genre}
                <br> Type: {frontmatter.type}
                <br> Price: {frontmatter.price}
            </div>
            <div class="ffff w-row">
                <div class="w-col w-col-6">
                    <a class="buttonmusic" href={frontmatter.downloadmp3}>
                        <img src="/img/icons/bxs-download.svg.svg">
                        <div>DOWNLOAD MP3</div>
                    </a>
                </div>
                <div class="w-col w-col-6">
                    <a class="buttonmusic" href={frontmatter.downloadflac}>
                        <img src="/img/icons/brandico_bandcamp.svg">
                        <div>DOWNLOAD FLAC</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <h1 class="heading-isssn">Track List</h1>

    <div class="listmus">
      			{
              frontmatter.stack.map(([stackName, stackHomepage, stackTime]) => (
                <div class="musiclist w-row">
                    <div class="column-2 w-col w-col-6">
                        <div class="numertrack">{stackName}.</div>
                        <div>{stackHomepage}</div>
                    </div>
                    <div class="column w-col w-col-6">
                        <div class="tas">{stackTime}</div>
                    </div>
                </div>
              ))
            }

  </div>

</div>
<h1 class="heading-isssn"><strong>Gallery</strong></h1>
<note/>
<div class="relises">
    <div class="photo-box"><img src="https://pixhost.icu/avaxhome/40/35/004a3540.jpg" height="100%" width="100%"></div>
    <div class="photo-box"><img src="6350de25b6de2eb628c3ba65/6350ed22b48f48199365d990_photo_2022-10-18_17-39-38.jpg" loading="lazy" srcset="6350de25b6de2eb628c3ba65/6350ed22b48f48199365d990_photo_2022-10-18_17-39-38-p-500.jpg 500w, 6350de25b6de2eb628c3ba65/6350ed22b48f48199365d990_photo_2022-10-18_17-39-38.jpg 640w"
